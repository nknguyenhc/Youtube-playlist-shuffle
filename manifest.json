{
  "manifest_version": 3,
  "name": "Youtube Playlist Shuffle",
  "description": "Truly shuffle your Youtube playlists",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon/icon.png"
  },
  "icons": {
    "16": "icon/icon-16.png",
    "32": "icon/icon-32.png",
    "48": "icon/icon-48.png",
    "128": "icon/icon-128.png"
  },
  "content_scripts": [
    {
      "js": [
        "js/manager.js",
        "js/content.js"
      ],
      "matches": [
        "https://*.youtube.com/*"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab",
    "scripting"
  ]
}